{
  "name": "little-lemon",
  "main": "index.js",
  "version": "1.0.0",
  "scripts": {
    "start": "EXPO_USE_FAST_RESOLVER=1 bunx expo start -c",
    "dev": "EXPO_USE_FAST_RESOLVER=1 bunx expo start --dev-client -c",
    "android": "bun expo run:android",
    "android:prebuild": "npx expo prebuild && bun expo run:android",
    "ios": "bun expo run:ios",
    "ios:prebuild": "npx expo prebuild && bun expo run:ios",
    "web": "bun run expo start --web",
    "test": "bun run jest --watchAll",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "clean": "rm -rf node_modules; rm -rf ios/build; rm -rf ios/build; rm -rf ios/Pods; rm -rf ios/Podfile.lock; rm -rf ~/Library/Developer/Xcode/DerivedData/",
    "lint": "biome lint ."
  },
  "jest": {
    "preset": "jest-expo"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "enabled": true
      }
    }
  },
  "dependencies": {
    "@expo/vector-icons": "15.0.3",
    "@react-navigation/bottom-tabs": "^7.4.0",
    "@react-navigation/elements": "2.6.3",
    "@react-navigation/native": "^7.1.8",
    "@tanstack/query-sync-storage-persister": "5.90.7",
    "@tanstack/react-query": "5.90.7",
    "@tanstack/react-query-persist-client": "5.90.7",
    "expo": "~54.0.33",
    "expo-checkbox": "^5.0.8",
    "expo-constants": "^18.0.13",
    "expo-dev-client": "~6.0.20",
    "expo-font": "~14.0.11",
    "expo-haptics": "~15.0.8",
    "expo-linking": "8.0.11",
    "expo-router": "~6.0.23",
    "expo-splash-screen": "~31.0.13",
    "expo-sqlite": "^16.0.10",
    "expo-status-bar": "~3.0.9",
    "expo-system-ui": "~6.0.9",
    "expo-web-browser": "~15.0.10",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-edge-to-edge": "1.0.0",
    "react-native-gesture-handler": "2.28.0",
    "react-native-keyboard-controller": "1.18.5",
    "react-native-mmkv": "4.0.0",
    "react-native-nitro-modules": "0.32.0",
    "react-native-reanimated": "4.1.1",
    "react-native-safe-area-context": "5.6.0",
    "react-native-screens": "4.16.0",
    "react-native-unistyles": "3.0.21",
    "react-native-web": "0.21.0",
    "react-native-worklets": "0.5.1",
    "zustand": "5.0.2"
