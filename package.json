    "@dev-plugins/react-native-mmkv": "0.4.0",
    "@types/react": "19.1.10",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.17",
    "react-test-renderer": "18.2.0",
    "typescript": "5.9.2"
  },
  "private": true
}
